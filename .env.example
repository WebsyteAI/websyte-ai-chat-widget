# OpenAI API Key
OPENAI_API_KEY=your-openai-api-key

# Mistral AI API Key
MISTRAL_AI_API_KEY=your-mistral-api-key

# Database URL
DATABASE_URL=your-database-url

# Better Auth Configuration
BETTER_AUTH_URL=http://localhost:5173
BETTER_AUTH_SECRET=your-better-auth-secret

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Apify API Token
APIFY_API_TOKEN=your-apify-api-token

# API Bearer Token for automation (optional)
# Generate a secure token: openssl rand -hex 32
API_BEARER_TOKEN=your-secret-bearer-token-here

# Optional: IP Address Storage (for GDPR compliance)
# Set to "true" to store IP addresses in chat messages
STORE_IP_ADDRESSES=false

# Optional: Message Retention (days)
# Messages older than this will be automatically deleted
MESSAGE_RETENTION_DAYS=90

# Optional: Metrics Endpoint
METRICS_ENDPOINT=your-metrics-endpoint